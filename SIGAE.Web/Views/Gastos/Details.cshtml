@model SIGAE.Web.Data.Entities.Administrativo.Asesoria.Gasto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Gasto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TipoGasto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TipoGasto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Monto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Monto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Factura)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Factura))
            {
                <img src="@Url.Content(Model.Factura)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Asignado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asignado)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
