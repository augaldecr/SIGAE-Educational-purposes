@model SIGAE.Web.Models.GastoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Gasto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Factura" />
            <div class="form-group">
                <label asp-for="TipoGastoId" class="control-label"></label>
                <select asp-for="TipoGastoId" asp-items="Model.TiposGasto" class="form-control"></select>
                <span asp-validation-for="TipoGastoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (!string.IsNullOrEmpty(Model.Factura))
                {
                    <img src="@Url.Content(Model.Factura)" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
                }
            </div>
            <div class="form-group">
                <label asp-for="FacturaImg" class="control-label"></label>
                <input asp-for="FacturaImg" class="form-control" type="file" />
                <span asp-validation-for="FacturaImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver al listado</a>
</div>

